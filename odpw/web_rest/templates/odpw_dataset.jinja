{% extends "odpw_layout.jinja" %}


{% macro basics(data) -%}

<div class="ui card">
  <div class="image">
    <img src="/images/avatar2/large/kristy.png">
  </div>
  <div class="content">
    <a class="header">Kristy</a>
    <div class="meta">
      <span class="date">Joined in 2013</span>
    </div>
    <div class="description">
      Kristy is an art director living in New York.
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="user icon"></i>
      22 Friends
    </a>
  </div>
</div>
{%- endmacro %}



{% block content %}
    <div class="ui four cards">

        {% for p in data %}

            <div class="ui flex raised card">
                <div class="content">
                    <div class="header"><a href="{{p.uri}}">{{p.uri|get_domain}}</a> <span class="category right floated "><i class="{{p.iso| lower}} flag "></i></div>

                    <div class="meta">
                        <span class="date"><i class="calendar icon"></i>Created 7/27/2014</span>
                        <span class="right floated date"><i class="history icon"></i> Modified 8/4/2014</span>
                    </div>
                    <div class="meta">
                        <span class="right floated">{{p.software}}</span>
                        <a href="{{p.apiuri}}">API</a>
                        <a href="{{p.uri}}">Homepage</a>

                    </div>
                    <div class="description">
                        <div class="ui labeled icon menu">
                            <a class="item">{{p.datasets}} datasets</a>
                            <a class="item">6 licenses</a>
                            <a class="item">resources</a>
                        </div>
                    </div>
                </div>
                <div class="ui two bottom attached buttons">
                    <div class="ui button">
                        <i class="line chart icon"></i>
                        Dashboard
                    </div>
                </div>
            </div>

        {% endfor %}

    </div>
{% endblock %}

{% block script %}

{% endblock %}