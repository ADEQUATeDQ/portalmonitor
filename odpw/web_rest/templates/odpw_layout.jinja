            {% block headerstyle %}

            {% endblock %}
        </style>
        <script>
            {% block headscript %}

            {% endblock %}
        </script>
    </head>

    <body>

    <!-- HEADER -->
        <header id="header" class="ui vertical segment">
            <h1 class="ui header fifteen wide column">
                <div class="content">
                    Open Data Portal Watch
                    <div class="sub header">Quality Assessment and Monitoring of 261 Open Data Portals</div>
                </div>
                <img  class="ui small image" src="{{ url_for('.static', filename='img/wu.png')}}">
            </h1>
        </header>

    <!-- MAIN NAVIGATION -->
        <nav id="mainnav" class="ui  fluid secondary stackable pointing icon menu " >
            {% set navigation_bar = [
                    ('ui.index','odpw', 'ODPW', 'info'),
                    ('ui.system','system', 'System','server'),
                    ('ui.portalslist', 'portals', 'Portals','grid layout'),
                    ('ui.api', 'api', 'API','code'),
                    ('ui.qualitymetrics', 'quality', 'Quality Measures','code'),

                ]
            -%}
            {% set active_page = active_page|default('index') -%}
            {% for href, id, caption, icon  in navigation_bar %}
                <a class="link item {% if id == active_page %}active{% endif%}" href="{{ url_for(href)|e }}">
                    <i class="icon {{icon}}"></i>
                    {{ caption|e }}
                </a>
            {% endfor %}
            <a class="link item"><i class="icon download"></i>Data</a>
            <div class="right menu">
                <a href="{{url_for('ui.about')}}" class="ui item {% if id == active_page %}active{% endif%}">About</a>
            </div>
        </nav>


    <!-- CONTENT -->

        <section class="ui text">
            {% block content %}
            {% endblock %}
        </section>

