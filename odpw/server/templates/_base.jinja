<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html lang="en">
    <head>
    
        <title>Open Data Portal Watch</title>
        
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        
        {% block css %}
            <!--<link rel="stylesheet" href="{{ static_url('css/kube.min.css') }}" />-->
            <link rel="stylesheet" href="{{ static_url('css/kube.min.css') }}" />
            <link rel="stylesheet" href="{{ static_url('css/style.css') }}" />
            <link rel="stylesheet" href="{{ static_url('css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ static_url('fonts/source-code-pro.css') }}">
            <link rel="stylesheet" href="{{ static_url('css/multiple-select.css') }}">
        {% endblock %}
        
        {% block scripts %}
            
            <script type="text/javascript" src="{{ static_url('js/jquery.js') }}" ></script>
            <script type="text/javascript" src="{{ static_url('js/d3.min.js') }}" ></script>
            <script type="text/javascript" src="{{ static_url('js/topojson.js.1') }}" ></script>
            <script type="text/javascript" src="{{ static_url('js/vega.min.js.1') }}" ></script>
            <script type="text/javascript" src="{{ static_url('js/kube.min.js') }}" ></script>
            <script type="text/javascript" src="{{ static_url('js/jquery.dataTables.min.js') }}" ></script>
            <script type="text/javascript" src="{{ static_url('js/jquery.multiple.select.js') }}" ></script>
            <script type="text/javascript" src="{{ static_url('js/odpw.js') }}" ></script>
        {% endblock %}
    </head>
        
    <body>
        <div class="units-row">
            <div class="unit-100 unit-centered">
                <!-- Header -->
                {% include "_header.jinja" %}

                <!--  Navigation Bar -->
                <div class="units-row end" id="nav">
                    <div class="navigation-toggle" data-tools="navigation-toggle" data-target="#nav_main">
                        <span>Menu</span>
                    </div>

                    <nav id="nav-main" class="nav-tabs fullwidth end">
                        {% set navigation_bar = [
                            ('/', 'index', 'System', 'fa-laptop'),
                            ('/portal/', 'portal', 'Portal(s)','fa-server'),
                            ('/data/', 'data', 'Data & API', 'fa-server'),
                            ('/doc/', 'doc', 'Documentation', 'fa-info'),
                            ('/about/', 'about', 'About', 'fa-info')
                        ] -%}
                        {% set active_page = active_page|default('index') -%}
                        <ul>
                            {% for href, id, caption, icon in navigation_bar %}
                                <li{% if id == active_page %} class="active" {% endif%}>
                                    <a href="{{ href|e }}">
                                        <i class="fa {{ icon }}"></i>
                                        {{ caption|e }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>

                <!-- Content -->
                <div id="main" class="units-row">
                    <aside class="unit-10">
                        <nav id="nav-side" class="nav">
                            <ul>
                                {% block sidenav %}
                    
                                {% endblock %}    
                            </ul>
                        </nav>
                    </aside>
                    
                    <section class="unit-90 unit-role-left">
                        {% block section %}
                    
                        {% endblock %}  
                    </section>
                </div>
                {% include "_footer.jinja" %}
            </div>
        </div>
        {% block pageScripts %}

        {% endblock %}
    </body>
</html>
