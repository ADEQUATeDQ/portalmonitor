          }
        },
        "update": {
          "x": {
            "scale": "x",
            "signal": "tooltip.pre"
          },
          "dx": {
            "scale": "x",
            "band": true,
            "mult": 0.5
          },
          "y": {
            "scale": "y",
            "signal": "tooltip.perc",
            "offset": -1
          },
          "text": {
            "signal": "tooltip.count"
          },
          "fillOpacity": {
            "rule": [
              {
                "predicate": {
                  "name": "tooltip",
                  "id": {
                    "value": null
                  }
                },
                "value": 0
              },
              {
                "value": 1
              }
            ]
